@model Entities.ViewModels.BaseViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewBag.Title - HORIZON</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="d-flex" id="wrapper">
        <div class="bg-light" id="sidebar-wrapper">
            <div class="sidebar-heading">
                <div class="nav navbar-header m-3 ml-4">
                    <img src="@Url.Content(Model.LogoUrl)" width="130" height="130" alt="No image available" style="border-radius:25px;border:solid 0.1px;" />
                </div>
            </div>
            <div id="sidebar-items" class="list-group">
                <ul class="nav flex-column  ml-4 mt-2 mr-0">
                    <li class="nav-item m-3">
                        <a href="@Url.Action("Index", "Employee")" title="Home Page">
                            <i class="fa fa-home"></i>
                            <span>
                                <strong class="ml-2">Home</strong>
                            </span>
                        </a>
                    </li>
                    <li class="nav-item m-3">
                        <a href="@Url.Action("Index", "EmployeeSchedule")" title="Employee Schedule">
                            <i class="fa fa-calendar-minus-o"></i>
                            <span>
                                <strong class="ml-2">Calendar</strong>
                            </span>
                        </a>
                    </li>
                    <li class="nav-item m-3">
                        <a href="@Url.Action("Index", "EmployeeDashboard")" title="Company News">
                            <i class="fa fa-newspaper-o"></i>
                            <span>
                                <strong class="ml-2">Dashboard</strong>
                            </span>
                        </a>
                    </li>
                    <li class="nav-item m-3">
                        <a href="@Url.Action("Index", "EmployeeDetails")" title="Details">
                            <i class="fa fa-user-circle-o"></i>
                            <span>
                                <strong class="ml-2">Details</strong>
                            </span>
                        </a>
                    </li>
                    <li class="nav-item m-3">
                        <a href="@Url.Action("Index", "EmployeePayment")" title="Payments">
                            <i class="fa fa-money"></i>
                            <span>
                                <strong class="ml-2">Payments</strong>
                            </span>
                        </a>
                    </li>
                    <li class="nav-item m-3">
                        <a href="@Url.Action("Index", "EmployeeRequest")" title="Employee Requests">
                            <i class="fa fa-comment-o"></i>
                            <span>
                                <strong class="ml-2">Request</strong>
                            </span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div id="page-content-wrapper">
            <header>
                @Html.Partial("_LogoutPartial")
            </header>
            <!-- /#page-content-wrapper -->
            <div class="container-fluid">
                <div class="justify-content-center">
                    @Html.Partial("_Messages")
                </div>
                @RenderBody()
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/popper")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", false)
    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
            icon = $(this).find("i");
            icon.toggleClass("fa-arrow-circle-right fa-arrow-circle-left")
        });
    </script>
</body>
</html>