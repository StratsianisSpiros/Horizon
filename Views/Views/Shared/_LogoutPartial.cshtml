@model Entities.ViewModels.BaseViewModel
<nav id="topnavbar" class="navbar navbar-expand-lg navbar-light bg-light border-bottom text-nowrap">

    <button class="btn" id="menu-toggle"><i class="fa fa-arrow-circle-left"></i></button>

    <button id="tglbtn" class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <span class="nav-item justify-content-start ml-2" id="navcomp">
        @if (Request.IsAuthenticated)
        {
            @Html.DisplayFor(m => m.LoggedCompany)
        }
        else
        {
            @Html.Label("ERP")
        }
    </span>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
            <li class="nav-item" id="navdate">
                    @Model.DateNow
            </li>
            @if (Request.IsAuthenticated)
            {
                <li id="lgtbtn" class="nav-item">
                    @using (Html.BeginForm("LogOff", "Home", new { id = "logoutForm" }, FormMethod.Post))
                    {
                        @Html.DisplayFor(m => m.LoggedUser)
                        @Html.AntiForgeryToken()
                        <button title="Log off" type="submit" value="Log Off" class="btn">
                            <i class="fa fa-sign-out"></i>
                        </button>
                    }
                </li>
            }
            else
            {
                <li class="nav-item">
                    @Html.ActionLink("Log out", "Login", "Home", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "btn btn-link nav-link text-white" })
                </li>
            }
        </ul>
    </div>
</nav>